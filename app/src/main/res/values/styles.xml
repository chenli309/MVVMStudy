<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VZToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/color_cb333333</item>
        <item name="actionMenuTextAppearance">@style/VZToolbarMenuTextSize</item>
    </style>
    <style name="VZToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">@dimen/f15</item>
    </style>

    <!--水平线-->
    <style name="color_horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/color_cbeeeeee</item>
    </style>
    <!--竖直线-->
    <style name="color_vertical_line_style">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_cbeeeeee</item>
    </style>
    <!--水平线-->
    <style name="color_horizontal_line_f4_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/color_cbf4f4f4</item>
    </style>
    <!--竖直线-->
    <style name="color_vertical_line_f4_style">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_cbf4f4f4</item>
    </style>
</resources>
